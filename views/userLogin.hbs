<link rel="stylesheet" href="/styles/userLogin.css">

<div class="login-box">
    <h2>User Login</h2>
    <form action="/user/login" method="POST" class="form">
        <input type="text" name="username" placeholder="Username" required>
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Login</button>
       <a href="/auth/google" class="social-login-btn">Sign in with Google</a>
       <a href="/auth/facebook" class="social-login-btn">Sign in with Facebook</a>
    </form>

    <p>Don't have an account? <a href="/user/register">Register</a></p>
</div>
